###> mercadopago/payment ###
# Mercado Pago API Credentials
# Get your credentials from: https://www.mercadopago.com/developers/panel/credentials
# Use TEST credentials for development
MERCADOPAGO_ACCESS_TOKEN=TEST-1234567890-020914-abcdef1234567890abcdef1234567890-123456789
MERCADOPAGO_PUBLIC_KEY=TEST-abcdef12-3456-7890-abcd-ef1234567890
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret-here

# Platform commission taken from each payment (percentage, e.g. 2.5 = 2.5%).
# Set to 0 to route 100% of the payment to the driver.
MERCADOPAGO_MARKETPLACE_FEE_PERCENT=0

# Marketplace OAuth (required for per-driver payments)
# APP_ID and APP_SECRET are found in your MP developer panel under "Your integrations"
MERCADOPAGO_APP_ID=
MERCADOPAGO_APP_SECRET=
# Full public URL that MP will redirect back to after driver authorization
MERCADOPAGO_OAUTH_REDIRECT_URI=http://localhost/oauth/mercadopago/callback

# 32-byte encryption key for storing OAuth tokens in the DB.
# Generate once with:  php -r "echo base64_encode(random_bytes(32));"
# Keep this secret and stable — changing it invalidates all stored tokens.
TOKEN_ENCRYPTION_KEY=
###< mercadopago/payment ###

###> symfony/lock ###
# Choose one of the stores below
# postgresql+advisory://db_user:db_password@localhost/db_name
LOCK_DSN=flock
###< symfony/lock ###

###> symfony/mercure-bundle ###
