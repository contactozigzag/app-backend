###> symfony/mailer ###
MAILER_DSN=null://null
###< symfony/mailer ###

###> symfony/messenger ###
# Choose one of the transports below
# MESSENGER_TRANSPORT_DSN=amqp://guest:guest@localhost:5672/%2f/messages
# MESSENGER_TRANSPORT_DSN=redis://localhost:6379/messages
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# RabbitMQ — used for payment webhook processing (async_webhooks transport).
# DSN format: phpamqplib://user:pass@host:port/vhost/exchange_name
# The vhost "/" must be URL-encoded as "%2f".
RABBITMQ_DSN=phpamqplib://guest:guest@rabbitmq:5672/%2f/webhooks
###< symfony/messenger ###

###> symfony/routing ###
# Configure how to generate URLs in non-HTTP contexts, such as CLI commands.
